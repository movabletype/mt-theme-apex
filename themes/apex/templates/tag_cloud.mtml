<section class="widget-tag-cloud widget">
  <header>
    <h1 class="widget__title"><__trans phrase="Tag Cloud"></h1>
  </header>
  <div class="widget-content">
    <ul class="widget-list">
<mt:Tags top="20" sort_by="name">
      <li class="widget-list__item tag rank-<mt:TagRank max="7">"><a href="<$mt:Link template="tags" encode_html="1"$>#<mt:tagName encode_html="1">"><mt:TagName></a></li>
</mt:Tags>
    </ul>
  </div>
</section>
